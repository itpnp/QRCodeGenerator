<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/astra?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.format_sql">true</property>
    <property name="hibernate.query.factory_class">org.hibernate.hql.classic.ClassicQueryTranslatorFactory</property>
    <property name="hibernate.jdbc.batch_size">22</property>
    <mapping resource="qrcodegenerator/entity/MasterProduct.hbm.xml"/>
    <mapping resource="qrcodegenerator/entity/Area.hbm.xml"/>
    <mapping resource="qrcodegenerator/entity/Khusus.hbm.xml"/>
    <mapping resource="qrcodegenerator/entity/User.hbm.xml"/>
    <mapping resource="qrcodegenerator/entity/Sheet.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
